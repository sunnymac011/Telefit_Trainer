<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_50sdp"/>
            <gradient
                android:startColor="#50efefed"
                android:centerColor="#50e5e5e3"
                android:endColor="#50b5b5b5"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_50sdp"/>
                <gradient
                    android:startColor="#0dc2b6"
                    android:endColor="#16c8bc"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_50sdp"/>
                <gradient
                    android:startColor="#0dc2b6"
                    android:endColor="#16c8bc"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>