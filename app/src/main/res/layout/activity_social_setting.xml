<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:background="@color/main_color">
                <ImageView
                    android:id="@+id/img_side_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vect_back"/>
                <TextView
                    android:id="@+id/txt_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Settings"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txt_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post "
                    android:textAlignment="center"
                    android:textColor="@color/light_blue"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/add_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_tab"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/tab_shadow_bg">

                <LinearLayout
                    android:id="@+id/ll_customers"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/tab_customers_icon"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customers"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/rubik"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_social"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/tab_sosial_icon"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/rubik"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/tab_profile_icon"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/rubik"/>

                </LinearLayout>

            </LinearLayout>


            <ScrollView
                android:id="@+id/sv_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_header"
                android:layout_above="@id/ll_bottom_tab"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#111111"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:lineSpacingExtra="4sp"
                        android:text="Social Platforms"
                        android:fontFamily="@font/rubik"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/light_gray"
                        android:layout_alignParentBottom="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="Facebook"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_fb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_alignParentBottom="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="Twitter"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_alignParentBottom="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="Instagram"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_alignParentBottom="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="SnapChat"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_snapchat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textSize="14sp"
                        android:textColor="#111111"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:lineSpacingExtra="4sp"
                        android:text="Telefit"
                        android:fontFamily="@font/rubik"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/light_gray"
                        android:layout_alignParentBottom="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="My Trainer"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_mytrainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_alignParentBottom="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d5676"
                            android:lineSpacingExtra="4sp"
                            android:layout_centerVertical="true"
                            android:text="Friends"
                            android:textStyle="bold"
                            android:fontFamily="@font/rubik" />
                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="#16c8bc"
                            app:sb_uncheckcircle_radius="0dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_alignParentBottom="true" />



                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

</layout>