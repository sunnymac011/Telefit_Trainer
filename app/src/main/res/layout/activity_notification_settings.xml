<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@color/main_color">

            <ImageView
                android:id="@+id/img_side_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vect_back"/>

            <TextView
                android:id="@+id/txt_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="@color/light_blue"
                android:fontFamily="@font/rubik"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/save_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_header">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txt_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification Alert"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/switch_alert"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        app:thumbTint="@color/white"
                        app:track="@drawable/switch_selector"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend's Notification"
                    android:textColor="@color/light_gray"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_5sdp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_fr_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txt_fr_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friend request emails"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/switch_fr_email"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_fr_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:thumbTint="@color/white"
                        app:track="@drawable/switch_selector"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/_20sdp"/>

                <RelativeLayout
                    android:id="@+id/rl_fra_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txt_fra_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friend request approved emails"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/switch_fra_email"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_fra_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:thumbTint="@color/white"
                        app:track="@drawable/switch_selector"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push Notifications"
                    android:textColor="@color/light_gray"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_5sdp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_encouragement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txt_encouragement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Encouragement to keep you going"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/switch_encouragement"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_encouragement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:thumbTint="@color/white"
                        app:track="@drawable/switch_selector"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/_20sdp"/>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

</layout>