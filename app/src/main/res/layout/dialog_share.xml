<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Post"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik"
        android:background="@color/main_color"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/txt_share_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share on facebook"
        android:textColor="@color/main_color"
        android:singleLine="true"
        android:fontFamily="@font/rubik"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/txt_share_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share on instagram"
        android:textColor="@color/main_color"
        android:singleLine="true"
        android:fontFamily="@font/rubik"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/txt_share_twiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share on twiter"
        android:textColor="@color/main_color"
        android:singleLine="true"
        android:fontFamily="@font/rubik"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/txt_share_snapchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share on Snapchat"
        android:textColor="@color/main_color"
        android:singleLine="true"
        android:fontFamily="@font/rubik"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:text="Close"
        android:textAllCaps="false"
        android:singleLine="true"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>

</LinearLayout>