<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:background="@drawable/tab_shadow_bg">

            <LinearLayout
                android:id="@+id/ll_customers"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_customers_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customers"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nutrition"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_nutrition_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/main_color"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fitness"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_fitness_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goals"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_goals_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_profile_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom_tab">

            <LinearLayout
                android:id="@+id/ll_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:paddingBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_side_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vect_back"/>

                    <TextView
                        android:id="@+id/txt_header_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/rubik"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txt_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue"
                        android:fontFamily="@font/rubik"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/add_icon"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/light_blue_circle"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                    <TextView
                        android:id="@+id/txt_food_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Egg Whites, 100% Liquid"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/txt_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="133"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_22sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/rubik"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"
                        android:layout_below="@+id/txt_cal"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_cal"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fat"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_total_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_blue"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sat Fat"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_sat_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cholesterol"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_cholesterol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_blue"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sodium"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_sodium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_blue"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Carbs"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_total_carbs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_blue"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fibre"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_fibre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sugars"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_sugars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protein"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"/>

                            <TextView
                                android:id="@+id/txt_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0g"
                                android:textColor="@color/light_blue"
                                android:textStyle="bold"
                                android:fontFamily="@font/rubik"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_header"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp">

                <NumberPicker
                    android:id="@+id/np_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <NumberPicker
                    android:id="@+id/np_serve_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_serving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Serving"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>