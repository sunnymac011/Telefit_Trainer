<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/user_placeholder"/>

    <LinearLayout
        android:id="@+id/ll_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/img_profile"
        android:layout_toLeftOf="@+id/img_video"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Coffee, Brewed"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/txt_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 cals per cup"
            android:maxLines="1"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_marginLeft="@dimen/_10sdp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        tools:text="3 Months Program"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        android:fontFamily="@font/rubik"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/img_video"
        android:layout_marginLeft="@dimen/_70sdp"/>

    <TextView
        android:id="@+id/txt_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_program"
        tools:text="To Lose 50 pounds in 3 months."
        android:textColor="@color/light_blue_text"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableLeft="@drawable/slating_flag_selected"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/img_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_camera"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_msg"
        android:layout_marginRight="@dimen/_10sdp"/>

    <ImageView
        android:id="@+id/img_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/send_msg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_below="@+id/txt_goal"
        android:layout_marginTop="@dimen/_5sdp"/>

</RelativeLayout>