<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_app_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_app_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Preferences"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_app_preferences_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_app_preferences_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_themes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_themes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Themes"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_themes_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_themes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_meals_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <ImageView
                    android:id="@+id/img_meals_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Units"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_units_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_units_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_recipes_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_recipes_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_food_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Database by Country"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_selected_country"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_selected_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_food_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <ImageView
                    android:id="@+id/img_food_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Devices and Apps"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_device_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_device_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_device_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_device_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_privacy_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_privacy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_privacy_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_privacy_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_notifications_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_notifications_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_notifications_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_notifications_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Telefit"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_about_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_about_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_about_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_about_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_help_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_help_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_help_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_help_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_logout_count"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txt_logout_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Australia"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_logout_right_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_logout_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_dark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>