<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_list"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:background="@drawable/trans_blue"
        android:backgroundTint="@color/light_blue_text"/>

    <LinearLayout
        android:id="@+id/ll_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_list"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_price"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 Month"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/txt_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10 Sessions"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 100 >"
        android:textColor="@color/light_blue_text"
        android:textStyle="bold"
        android:fontFamily="@font/rubik"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_80sdp"/>

</RelativeLayout>