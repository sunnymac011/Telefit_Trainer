<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Abcde"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_close_vect"
            android:layout_toLeftOf="@+id/btn_edit"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_icon_white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_measur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Measurement:"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_measur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="mg"
            android:textColor="@color/light_blue_text"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_per"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per 100g:"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_per"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textColor="@color/light_blue_text"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_serving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per Serving:"
            android:textColor="@color/main_color"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textColor="@color/light_blue_text"
            android:fontFamily="@font/rubik"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>